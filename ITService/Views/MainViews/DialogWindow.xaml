<controlzex:WindowChromeWindow x:Class="ITService.UI.Views.MainViews.DialogWindow"
                               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                               xmlns:local="clr-namespace:ITService.UI.Views.MainViews"
                               xmlns:controlzex="urn:controlzex"
                               mc:Ignorable="d"
                               WindowStartupLocation="CenterScreen"
                               Title="{Binding Title}"
                               FontFamily="Verdana"
                               FontSize="15"
                               MinHeight="200"
                               MinWidth="400"
                               ResizeMode="NoResize"
                               SizeToContent="WidthAndHeight"
                               Style="{DynamicResource DialogWindowStyle}">
    <ContentControl Content="{Binding}"/>
</controlzex:WindowChromeWindow>        
